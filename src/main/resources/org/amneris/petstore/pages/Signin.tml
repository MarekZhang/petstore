<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter">

<head>
	<!--[if IE 7]>    <html class="no-js ie7 ie" lang="en"> <![endif]-->
	<!--[if IE 8]>    <html class="no-js ie8 ie" lang="en"> <![endif]-->
	<!--[if IE 9]>    <html class="no-js ie9 ie" lang="en"> <![endif]-->
	<!--[if gt IE 9]><!--> <html class="no-js" lang="en"/> <!--<![endif]-->

	<meta name="description" content=""/>
	<meta name="author" content="Amneris Labs | www.amneris.eu"/>
	<meta name="viewport" content="width=device-width, initial-scale=1.0"/>

	<!-- jQuery Visualize Styles -->
	<link rel='stylesheet' type='text/css' href='${context:huraga/css/plugins/jquery.visualize.css}'/>

	<!-- CSS styles -->
	<link rel='stylesheet' type='text/css' href='${context:huraga/css/huraga-dark.css}'/>

	<script src="${context:huraga/js/libs/modernizr.js}" type="text/javascript"></script>
	<script src="${context:huraga/js/libs/selectivizr.js}" type="text/javascript"></script>

</head>

<body>

	<!-- Main page container -->
	<section class="container login" role="main">

		<h1>Tynamo PetStore</h1>
		<div class="data-block">
			<t:form clientValidation="false">
				<t:if test="hasLoginMessage()">
					<div id="errorMessages">${loginMessage}</div>
				</t:if>

				<fieldset>
					<div class="control-group">
						<t:label class="control-label" for="username">${message:username}</t:label>
						<div class="controls">
							<t:textfield t:id="username" validate="required" size="40" tabindex="1" placeholder="Your username"/>
						</div>
					</div>
					<div class="control-group">
						<t:label class="control-label" for="password">${message:password}</t:label>
						<div class="controls">
							<t:passwordfield t:id="password" validate="required" size="40" tabindex="2" placeholder="Your password"/>
							<label class="checkbox">
								<t:checkbox t:id="rememberMe" tabindex="3" />${message:remember.me}
							</label>
						</div>
					</div>
					<div class="form-actions">
						<button class="btn btn-large btn-inverse btn-alt" type="submit" tabindex="4"><span class="awe-signin"></span>${message:login}</button>
					</div>
				</fieldset>
			</t:form>
		</div>
		<p><a href="#" class="pull-right"><small>${message:forgot.password}</small></a></p>

	</section>

</body>
</html>
